<div class="col-md-8 col-md-offset-2">
<h2>註冊帳號</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
    <%= f.input :account, required: true, autofocus: true, input_html: { class: 'form-control' } %>
    <%= f.input :email, required: true, autofocus: true, input_html: { class: 'form-control' } %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable), input_html: { class: 'form-control' } %>
    <%= f.input :password_confirmation, required: true, input_html: { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.button :submit, "註冊" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>

