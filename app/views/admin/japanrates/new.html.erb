<h2>新增匯率</h2>
<hr>
<%= simple_form_for [:admin, @japanrate] do |f| %>
  <div class="form-group">
    <%= f.input :bank, input_html: { class: 'form-control' } %>
  </div>
  <div class="form-group">
    <%= f.input :url , input_html: { class: 'form-control' }%>
  </div>
  <div class="form-group">
    <%= f.input :cashrate_buy, input_html: { class: 'form-control' } %>
  </div>
  <div class="form-group">
    <%= f.input :cashrate_sell, input_html: { class: 'form-control' } %>
  </div>
  <div class="form-group">
    <%= f.input :sightrate_buy, input_html: { class: 'form-control' } %>
  </div>
  <div class="form-group">
    <%= f.input :sightrate_sell, input_html: { class: 'form-control' } %>
  </div>

  <%= f.submit "Submit", data: { disable_with: "Submitting..." } %>
<% end %>

