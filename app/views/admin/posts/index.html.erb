<h2>旅遊文章分享</h2>
<hr>

<%= link_to("新增文章", new_admin_post_path, class: "btn btn-success") %>
<hr>
<table class = "table">
  <thead>
    <tr>
      <td>文章標題</td>
      <td>文章作者</td>
      <td>修改時間</td>
      <td>操作</td>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.author.account %></td>
        <td><%= post.updated_at %></td>
        <td>
          <%= link_to("編輯", edit_admin_post_path(post), class: "btn btn-primary btn-sm") %>
          <%= link_to("刪除", admin_post_path(post), method: :delete, class: "btn btn-danger btn-sm") %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
