<h2>編輯文章</h2>
<hr>
<%= simple_form_for [:admin, @post] do |f| %>
  <div class="form-group">
    <%= f.input :title, input_html: { class: 'form-control' } %>

  </div>
  <div class="form-group">
    <%= f.text_area :content, class: 'tinymce', rows: 28, cols: 120 %>
    <%= tinymce %>
  </div>
  <%= f.submit "Submit", data: { disable_with: "Submitting..." } %>
<% end %>
